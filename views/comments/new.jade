doctype html
html
	include ../partials/header.jade
	.container
		.row
			h1(style='text-align:center;') Add New Comment to #{campground.name}
			div(style='width: 30%; margin: 0 auto;')
				form(action='/campgrounds/' + campground._id + '/comments', method='POST')
					.form-group
						textarea.form-control(name='text', placeholder='Your comment here')
						
					.form-group
						button.btn.btn-large.btn-primary.btn-block(type='submit') Submit!

				a(href='/campgrounds') Back to Campgrounds

	include ../partials/footer.jade