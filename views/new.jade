doctype html
html
	include ./partials/header.jade
	.container
		.row
			h1(style='text-align:center;') Create a new Campground
			div(style='width: 30%; margin: 0 auto;')
				form(action='/campgrounds', method='POST')
					.form-group
						input.form-control(type='text', name='name', placeholder='Name of Camp')
					
					.form-group
						input.form-control(type='text', name='image', placeholder='Image of Camp')
						
					.form-group
						button.btn.btn-large.btn-primary.btn-block(type='submit') Add Campground

				a(href='/campgrounds') Back to Campgrounds

	include ./partials/footer.jade